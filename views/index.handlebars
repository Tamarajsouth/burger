<div class="container"> 
    <span><h1>Add a Burger</h1></span>
<form class="create-form">

  <div class="form-group-fluid">
    <label for="burg">Burger:</label>
    <input type="text" id="burg" name="burger_name">
  </div>
<div class="container">
  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
      
    <input type="radio" name="devoured" value="0" checked>Needs to be Devoured!
    <br>
    <input type="radio" name="devoured" value="1">Devoured!
  </div>

  </div>

  <button type="submit"class="btn btn-primary">Add Burger:</button>
</form>
</div>
</div>
</div>
<h1>Burgers!</h1>
<h2>Burgers to be Devoured:</h2>
</div>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <p>{{id}}. {{burger_name}}
        <span><button class="change-devour" data-id="{{id}}" data-newdevour=true>
          {{#if devoured}}devoured!{{else}}devour me!{{/if}}
        </button></span>
      </p>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers:</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <p>{{id}}. {{burger_name}}</p>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>